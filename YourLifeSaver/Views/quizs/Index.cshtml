                            </div>*@
                        </div>
                    </div>
            </div>
        </div>
    </div>
    
</section>

<script>
    $(function () {
        var i = 1;
        var totalcount = 0;
        var currentQuiz = '#choice1';

        $("label.btn").on('click', function () {

            var currentQuestion = '#question' + i;
            if (i == 4 || i == 5) {
                currentQuiz = '#choice3';
            }
            else if (i == 6 || i == 7) {
                currentQuiz = '#choice2';
            }
            else if (i == 12 || i == 15) {
                currentQuiz = '#choice4';
            }
            else {
                currentQuiz = '#choice1';
            }
            ++i;
            var nextQuestion = '#question' + i;
            var nextQuiz = '#choice1'
            if (i == 4 || i == 5) {
                nextQuiz = '#choice3';
            }
            else if (i == 6 || i == 7) {
                nextQuiz = '#choice2';
            }
            else if (i == 12 || i == 15) {
                nextQuiz = '#choice4';
            }
            else {
                nextQuiz = '#choice1';
            }
            var choice = $(this).find('input:radio').val();
            totalcount += parseInt(choice);

            $(currentQuiz).fadeOut();
            $(currentQuestion).hide();
            if (i < 16) {
                $(nextQuestion).show();
                setTimeout(function () {

                    $(nextQuiz).fadeIn();
                    /* something else */
                }, 800);
            }

            if (i == 16) {

                if (totalcount >= 11) {

                    $('#result1').fadeIn();
                    //$('#finish1').fadeIn();
                }
                else if (totalcount < 6) {
                    $('#result3').fadeIn();

                    //$('#finish3').fadeIn();
                }
                else {
                    $('#result2').fadeIn();
                    //$('#finish2').fadeIn();
                }
            }
        });        
    });


</script>

